generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PropertyType {
  Apartment
  Pilot
  Basement
  Land
  Resident
  Buyer
  Rent
}

model User {
  id           String   @id @unique @default(uuid())
  name         String
  title        String
  phone        String   @unique
  registerDate DateTime @default(now())
  token        String
  Sale         Sale[]
  Buyer        Buyer[]
  Rent         Rent[]
}

model Sale {
  id         String       @id @unique @default(uuid())
  user       User         @relation(fields: [userId], references: [id])
  title      String
  price      Int?
  sellerName String?
  phone      String
  address    String?
  detail     String?
  meterage   Int?
  room       Int?
  buildYear  Int?
  floor      Int?
  countFloor Int?
  parking    Boolean?
  elvator    Boolean?
  warehouse  Boolean?
  tag        String[]
  submitedAt DateTime     @default(now())
  userId     String
  type       PropertyType
}

model Buyer {
  id            String         @id @unique @default(uuid())
  user          User           @relation(fields: [userId], references: [id])
  title         String
  price         Int?
  mortgage   Int?
  rent       Int?
  sellerName    String?
  phone         String
  detail        String?
  fromMeter     Int?
  toMeter       Int?
  room          Int?
  fromBuildYear Int?
  toBuildYear   Int?
  tag           String[]
  submitedAt    DateTime       @default(now())
  userId        String
  type          PropertyType   @default(Buyer)
  property      PropertyType[]
}

model Rent {
  id         String       @id @unique @default(uuid())
  user       User         @relation(fields: [userId], references: [id])
  title      String
  mortgage   Int?
  rent       Int?
  owner      String?
  phone      String
  address    String?
  detail     String?
  meterage   Int?
  room       Int?
  buildYear  Int?
  floor      Int?
  countFloor Int?
  parking    Boolean?
  elvator    Boolean?
  tag        String[]
  submitedAt DateTime     @default(now())
  userId     String
  type       PropertyType @default(Rent)
}
