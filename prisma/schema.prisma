generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryType {
  Sale
  Buyer
  Asker
  Rent
}

enum PropertyType {
  Eco
  DailyRent
  Apartment
  Pilot
  Basement
  Land
  Resident
  Rent
}

model User {
  id           String   @id @unique @default(uuid())
  email        String?  @unique
  password     String?
  name         String?
  title        String?
  phone        String?  @unique
  registerDate DateTime @default(now())
  token        String
  Liked        String[]
  House        House[]
}

model House {
  id              String       @id @unique @default(uuid())
  user            User         @relation(fields: [userId], references: [id])
  title           String
  price           Int?
  mortgage        Int?
  rent            Int?
  sellerName      String?
  phone           String
  detail          String?
  meterage        Int?
  fromMeter       Int?
  toMeter         Int?
  room            Int?
  buildYear       Int?
  fromBuildYear   Int?
  toBuildYear     Int?
  tag             String[]
  submitedAt      DateTime     @default(now())
  userId          String
  type            PropertyType
  category        CategoryType
  watchCount      Int          @default(0)
  cardImgUrl      String?
  firstImgUrl     String?
  otherContentUrl String[]
}
